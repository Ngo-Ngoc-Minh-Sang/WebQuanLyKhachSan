<body>

    <div class="super_container">

        <!-- Header -->

        <header class="header">
            <div class="header_content d-flex flex-row align-items-center justify-content-start">
                <div class="logo"><a href="@Url.Action("index", "Home")">Hoàng Gia</a></div>
                <div class="ml-auto d-flex flex-row align-items-center justify-content-start">
                    <nav class="main_nav">
                        @if (Session["taiKhoanAD"] == null)
                        {
                        <ul class="d-flex flex-row align-items-start justify-content-start">
                            <li class="active"><a href="@Url.Action("index", "Home")">Trang chủ</a></li>
                            <li><a href="@Url.Action("About", "TrangPhu")">Thông tin</a></li>
                            <li><a href="@Url.Action("ShowPhong", "Phong")">Phòng</a></li>
                            <li><a href="@Url.Action("ShowDichVu", "DichVu")">Dịch vụ</a></li>
                            @if (Session["taiKhoan"] != null)
                            {
                                <li><a href="@Url.Action("PhongDaDat", "DatPhong")">Phòng đặt</a></li>
                                <li><a href="@Url.Action("DichVuDaDat", "DichVu")">Dịch vụ đặt</a></li>
                            }
                            <li><a href="@Url.Action("DangNhap", "NguoiDung")">Đăng nhập</a></li>
                            <li><a href="@Url.Action("DangKi", "NguoiDung")">Đăng ký</a></li>
                        </ul>
                        }
                        else
                        {
                           <ul class="d-flex flex-row align-items-start justify-content-start">
                                <li class="active"><a href="@Url.Action("index", "Home")">Trang chủ</a></li>
                                <li><a href="@Url.Action("Admin", "Home")">Quản Lý</a></li>
                                <li><a href="@Url.Action("DangKi", "NguoiDung")">Đăng Nhập</a></li>
                            </ul> 
                        }
                    </nav>
                    @if (@Session["taiKhoan"] != null || @Session["taiKhoanAD"] != null)
                    {
                        <div style="margin-left: 70px; background-color:#ffa37b; border-radius: 40px; position: relative; height: 80px; width: 200px;" id="avatar">
                            <div style="position: absolute; right: 30px; top: 0px; width: 150px; color: red; font-size: 18px; font-weight: bold;">
                                <img src="../Assets/images/icon_user.png" alt="">
                                <span>@Session["Ten"]</span>
                            </div>
                            <a href="@Url.Action("DangXuat", "NguoiDung")" style="padding-left: 65px; font-size: 18px; font-weight: bold; position: absolute; top: 50px;" onclick="checkClick()" name="DangXuat">Đăng Xuất</a>
                        </div>
                        @*<script>
                                window.alert("Chào mừng bạn @Session["Ten"] có MÃ KHÁCH HÀNG LÀ: @Session["MaKH"] đã đăng nhập vào hệ thống khách sạn HOÀNG GIA của chúng tôi!")
                            </script>*@
                    }
                    <!-- Hamburger Menu -->
                    <div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>
                </div>
            </div>
